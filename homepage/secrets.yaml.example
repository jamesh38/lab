# Homepage secrets template
# Copy this file to secrets.yaml and fill in your values
# kubectl apply -f homepage/secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: homepage-secrets
  namespace: homepage
type: Opaque
stringData:
  # Jellyfin: Dashboard > API Keys > Create new key
  HOMEPAGE_VAR_JELLYFIN_API_KEY: ""
  # Radarr: Settings > General > API Key
  HOMEPAGE_VAR_RADARR_API_KEY: ""
  # Sonarr: Settings > General > API Key
  HOMEPAGE_VAR_SONARR_API_KEY: ""
  # Prowlarr: Settings > General > API Key
  HOMEPAGE_VAR_PROWLARR_API_KEY: ""
  # qBittorrent: WebUI username and password
  HOMEPAGE_VAR_QBITTORRENT_USER: "admin"
  HOMEPAGE_VAR_QBITTORRENT_PASS: ""
  # Portainer: Settings > Users > (your user) > Access tokens > Add access token
  HOMEPAGE_VAR_PORTAINER_API_KEY: ""
  # Gitea: Settings > Applications > Generate New Token (needs notifications, repository, issue permissions)
  HOMEPAGE_VAR_GITEA_API_KEY: ""
  # Grafana: Username and password for Grafana
  HOMEPAGE_VAR_GRAFANA_USER: "admin"
  HOMEPAGE_VAR_GRAFANA_PASS: ""
  # Unifi Controller: API key from unifi.ui.com > Account > API Keys
  HOMEPAGE_VAR_UNIFI_API_KEY: ""
